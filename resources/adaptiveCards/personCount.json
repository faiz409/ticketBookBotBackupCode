{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "wrap": true,
                    "text": "Please select the person count",
                    "size": "Medium",
                    "weight": "Bolder"
                },
                {
                    "type": "Input.Number",
                    "id": "personCount",
                    "min": 1,
                    "isRequired": true,
                    "label": "Person count",
                    "errorMessage": "select minimum 1 person",
                    "value": 1
                },
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.Submit",
                            "title": "Submit"
                        }
                    ]
                }
            ]
        }
    ]
}